<div class="overlay"></div>

<p class="sash event">
    <i class="icon-calendar"></i>
</p>
<p class="sash event-added">
    <i class="icon-calendar"></i>
</p>
<p class="sash video">
    <i class="icon-facetime-video"></i>
</p>
<p class="sash audio">
    <i class="icon-headphones"></i>
</p>
<p class="sash text">
    <i class="icon-file-alt"></i>
</p>
<p class="sash added">
    <span>
        Added to playlist
        <i class="icon-plus"></i>
    </span>
</p>
<p class="sash flagged">
    <span>
        Flagged
        <i class="icon-flag"></i>
    </span>
</p>


<div class="icon pull-left">
    {{#if author.profileimageurlhttps}}
        <img src="{{ author.profileimageurlhttps }}" width="40" height="40" />
    {{else}}
        <img src="/-assets/images/user.png" width="40" height="40" />
    {{/if}}
</div>
<p class="username username-item pull-left">
    <a href="#user/{{ author.pid }}">
        {{ author.pid }}
    </a>
</p>


{{#is media 'video'}}
    <p class="item-text pull-left">
        {{#ifYoutube link }}
            <a class="fancybox fancybox.iframe" href="{{ getYoutubeUrl link }}">
                <i class="icon-play-circle"></i>
                {{ text }}
            </a>
        {{else}}
            <a class="fancybox fancybox.iframe" href="{{ link }}">
                <i class="icon-play-circle"></i>
                {{ text }}
            </a>
        {{/ifYoutube}}
    </p>
{{else}}
    {{#is media 'audio'}}
        <p class="item-text pull-left">
            {{#ifSpotify link }}
                <a class="audio" href="{{ getSpotifyUrl link }}">
                    <i class="icon-play-circle"></i>
                    {{ text }}
                </a>
            {{else}}
                <a class="audio" href="{{ link }}">
                    <i class="icon-play-circle"></i>
                    {{ text }}
                </a>
            {{/ifSpotify}}
        </p>
    {{else}}
        <p class="item-text pull-left">
            <a class="fancybox fancybox.iframe" href="{{ link }}">
                <i class="icon-external-link"></i>
                {{ text }}
            </a>
        </p>
    {{/is}}
{{/is}}


{{#if duration}}
    <ul class="item-duration duration pull-left">
        {{#if duration.days}}
        <li class="days">{{ duration.days }}d</li>
        {{/if}}

        {{#and duration.days duration.hours }}
        <li class="durationcolon">:</li>
        {{/and}}

        {{#if duration.hours }}
        <li class="hours">{{ duration.hours }}h</li>
        {{/if}}

        {{#and duration.hours duration.minutes }}
        <li class="durationcolon">:</li>
        {{/and}}

        {{#if duration.minutes }}
        <li class="minutes">{{ duration.minutes }}m</li>
        {{/if}}

        {{#and duration.minutes duration.seconds }}
        <li class="durationcolon">:</li>
        {{/and}}

        {{#if duration.seconds }}
        <li class="seconds">{{ duration.seconds }}s</li>
        {{/if}}
    </ul>
{{/if}}


{{#if via}}
    <p class="via pull-left">
        <a href="#user/{{ via.pid }}">
            copied by {{ via.name }}
        </a>
    </p>
{{/if}}


<p class="time pull-left">
    <a class="fancybox fancybox.iframe" href="{{ link }}">
        {{#ifHasEvent event}}
            <i class="icon-calendar"></i> <span class="event">event:</span>
            <span class="timestamp">{{ fromNow event }}</span>
        {{else}}
            <i class="icon-time"></i> <span class="added">added:</span>
            <span class="timestamp">{{ fromNow ts }}</span>
        {{/ifHasEvent}}
        <a class="item-url" href="{{ urlItem id }}">link</span>
    </a>
</p>


{{#is session user }}
    {{#is status 'p' }}
        <a class="button button-promote">
            <i class="icon-ok"></i>
        </a>
    {{else}}
        <a class="button button-demote">
            <i class="icon-remove"></i>
        </a>
    {{/is}}
{{else}}
    <a class="button button-promote">
        <i class="icon-ok"></i>
    </a>
{{/is}}